<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:layout_marginBottom="16dp"
    >

    <ImageView
        android:id="@+id/storeImage"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="nameeeeeeeeeeeeeeeeeeeeee"
        android:layout_alignTop="@id/storeImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/storeImage"
        android:layout_toEndOf="@id/storeImage"/>

    <TextView
        android:id="@+id/storeDescription"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="descriptionnnnnnnnnnnnnnnnnnnnnnnnnnn"
        android:singleLine="false"
        android:layout_marginStart="8dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@id/storeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/storeImage"
        android:layout_toEndOf="@id/storeImage"
        />
</RelativeLayout>